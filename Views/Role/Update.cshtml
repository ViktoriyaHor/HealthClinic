@model RoleEdit
@{
    ViewData["Title"] = "UPDATE ROLE";
}
<hr class="underline-hr">
<h1 class="text-center">Update Role</h1>
<hr class="underline-hr">

<a asp-action="Index" class="btn btn-secondary">Back</a>
<div asp-validation-summary="All" class="text-danger"></div>

<form method="post">
    <input type="hidden" name="roleName" value="@Model.Role.Name" />
    <input type="hidden" name="roleId" value="@Model.Role.Id" />

    <hr class="underline-hr">

    <h2 class="p-1 text-center">Add To @Model.Role.Name</h2>
    <hr class="underline-hr">

    <table class="table table-bordered table-sm">
        @if (Model.NonMembers.Count() == 0)
        {
            <tr>
                <td colspan="2">All Users Are Members</td>
            </tr>
        }
        else
        {
            @foreach (AppUser user in Model.NonMembers)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>
                        <input type="checkbox" name="AddIds" value="@user.Id">
                    </td>
                </tr>
            }
        }
    </table>
    <hr class="underline-hr">

    <h2 class="p-1 text-center">Remove From @Model.Role.Name</h2>
    <hr class="underline-hr">

    <table class="table table-bordered table-sm">
        @if (Model.Members.Count() == 0)
        {
            <tr>
                <td colspan="2">No Users Are Members</td>
            </tr>
        }
        else
        {
            @foreach (AppUser user in Model.Members)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>
                        <input type="checkbox" name="DeleteIds" value="@user.Id">
                    </td>
                </tr>
            }
        }
    </table>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
